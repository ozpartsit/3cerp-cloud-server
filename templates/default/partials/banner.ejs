<!--Small Banner-->

<div class="section small-banners pt-0">
    <div class="container">
        <div class="row">
            <% data.banner.pages.forEach((item, index)=> { %>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                    <div class="small-banner-item rounded-3">
                        <img class="blur-up lazyload rounded-3 w-100" data-src="<%= item.image.fullPath%>"
                            src="<%= item.image.fullPath%>" alt="<%= item.image.name%>" title="<%= item.image.name%>"
                            width="630" height="320" />
                        <div class="detail">
                            <h3 class="title text-uppercase mb-0">
                                <%= item.name%>
                            </h3>
                            <h4 class="text-uppercase">
                                <%= item.description%>
                            </h4>
                            <p>
                                <%= item.description%>
                            </p>
                            <a href="<%= `${data.page.host}/${item.urlComponent}` %>"
                                class="btn btn-primary btn--small">Read more!</a>
                        </div>
                    </div>
                </div>
                <% }); %>

        </div>
    </div>
</div>
<!--End Small Banner-->